{
  "name": "chart-list-action",
  "version": "0.1.0",
  "description": "GitHub Action for extracting details about processed charts from chart-testing logs",
  "author": "Oleg Stobbe",
  "license": "Apache-2.0",
  "keywords": [
    "actions"
  ],
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "ncc build ./src/index.ts -o ./dist --source-map --no-source-map-register",
    "test": "vitest run -c vitest.config.ts",
    "clean": "rm -rv ./dist/*",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "1.11.1"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@vercel/ncc": "0.38.3",
    "memfs": "4.17.0",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  }
}
